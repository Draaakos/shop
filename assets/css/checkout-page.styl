@import 'ui/navbar'
@import 'ui/footer'
@import 'ui/config'
@import 'ui/breadcrumb'
@import 'ui/form'

.checkout
    width 100%
    max-width 1170px
    margin 0 auto

    &__form
        width 100%
        padding 0 15px

        &__title
            padding-bottom 1em
            border-bottom 1px solid #e1e1e1
            margin-bottom 1em

    &__order
        background-color #f5f5f5
        padding 30px

        &__title
            padding-bottom 1em
            border-bottom 1px solid #e1e1e1
            margin-bottom 1em

        &__detail
            &__content
                font-size 15px
                display flex
                justify-content space-between
                margin-bottom 1em

    .strong
        font-weight bold


@media screen and (min-width 1024px)
    .checkout
        display flex

        &__form
            width 100%

        &__order
            width 360px
