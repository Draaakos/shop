@import 'ui/navbar'
@import 'ui/footer'
@import 'ui/config'
@import 'ui/breadcrumb'
@import 'ui/family-fonts'

.basket-table
    width 100%
    max-width 1170px
    margin 0 auto

    .row
        font-family "Montserrat", sans-serif
        border-bottom 1px solid #f2f2f2
        display table-row

        &__item
            padding 30px 0

            &__flex
                display flex
                align-items center


            .img-container
                width 90px
                height  90px
                background-repeat no-repeat
                background-size cover
                background-position center
                margin-right  1em

            &__name
                &:hover
                    cursor pointer

.checkout-button
    text-align center
    margin-top 1em
