.publication
    border-bottom: 4px double #f2f2f2;

    &__title
        text-align center
        font-family "Raleway Medium", sans-serif
        font-size 16px
        letter-spacing 3.25px
        text-transform uppercase
        margin 1em 0

    &__subtitle
        text-align center
        font-family "Raleway Medium", sans-serif
        font-size 10px
        letter-spacing 2.25px
        text-transform uppercase
        opacity .5
        margin-bottom 1em

    &__image
        img
            width 100%

    &__content
        color #333
        line-height 26px
        font-size 15px
        font-family "Crimson Text", serif
        text-align justify


@media screen and (min-width 1024px)
    .publication
        &__title
            font-size 20px

        &__subtitle
            font-size 14px

        &__content
            font-size 18px

