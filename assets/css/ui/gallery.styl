.gallery
    // height 100vw

    img
        object-fit contain
        height 100%
        width 100%

    &__menu
        display flex
        justify-content center

        &__item
            height 100px
            width 100px
            margin-bottom 5px

            img
                object-fit cover
                width 100%
                height 100%
                border 1px solid #444

            &:hover
                cursor pointer

            &--active
                img
                    border 3px solid #ca1515




@media screen and (min-width 1024px)
    .gallery
        height 50vw
        text-align center
        justify-content space-around
        max-height 520px
        flex-direction row-reverse

        img
            width 100%
            object-fit cover
            margin-bottom 1em

        &__menu
            // width 100px
            // min-width 100px
            height 100%
            overflow hidden
            display flex

            &__item
                height 100px
                margin-bottom 5px
                width 100px
                margin 0 .5em
