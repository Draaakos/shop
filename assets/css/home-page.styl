@import 'ui/navbar'
@import 'ui/footer'
@import 'ui/config'
@import 'ui/family-fonts'

.banner
    width 100%
    font-family 'monserrat'

    .background-img
        background-repeat no-repeat
        background-position center
        background-size cover
        height 50vw
        margin-bottom 1em

        &__main
            height calc(100vh - 90px)

        &__1
            background-image url('../images/category-1.jpg')

        &__2
            background-image url('../images/category-2.jpg')

        &__3
            background-image url('../images/category-3.jpg')

        &__4
            background-image url('../images/category-4.jpg')

        &__5
            background-image url('../images/category-5.jpg')

        .float-text
            height 100%
            width 100%
            display flex
            justify-content center
            align-items center
            padding 0 1em 0

            .text
                width 100%

                &__title
                    font-family 'Cookie'
                    font-size 3em
                    margin-bottom 1em

                &__description
                    color #666666
                    font-weight 400
                    font-family "Montserrat", sans-serif
                    max-width 500px



@media screen and (min-width 1024px)
    .banner
        .background-img
            margin-bottom 0
            height auto
