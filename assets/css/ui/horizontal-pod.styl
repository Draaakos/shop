.h-pod
    margin-bottom 1em
    border 1px solid #eee
    padding 32px 20px

    &__head
        margin-bottom 1em

    &__body
        display flex
        align-items center
        justify-content space-between

        &__image
            width 90px
            height 90px

            img
                object-fit cover
                width 100%
                height 100%

        &__detail
            display flex
            align-items center
            justify-content space-between
            width 50%
