@import 'ui/family-fonts'

i
    color #333

.navbar
    display flex
    align-items center
    background-color #fff
    box-shadow 0px 5px 10px rgba(91, 91, 91, 0.1)
    height 83px
    margin-bottom 10px

    .icon
        &__container
            display flex
            align-items center
            justify-content center
            width 30px
            height 30px
            font-size 18px


    .menu-wrapper
        position fixed
        background-color rgba(0, 0, 0, .4)
        width 100%
        height 100%
        left -100vw
        top 0
        transition all .2s ease-out

        .menu
            height 100%
            width 270px
            background-color white
            position relative
            padding-top 100px

            &__list
                padding 0 20px 0 30px
                margin-bottom 1em

                &__option
                    font-family "Montserrat", sans-serif
                    text-transform uppercase
                    color #333
                    font-weight 400
                    font-size 15px

                    &:hover
                        color #ca1515

                .item-list
                    padding-top 60px
                    width 100%
                    display flex
                    align-items center
                    justify-content center
                    position absolute
                    top 0
                    left 0

            &__logo
                padding 30px 20px 30px 30px
                margin-bottom 1em

            &__login
                font-family "Montserrat", sans-serif
                margin-top 1em
                font-size 12px

                a
                    color #666666

                    &:hover
                        color #ca1515

        &__icon
            font-size 22px
            display flex
            justify-content center
            align-items center
            border 1px solid black
            width 35px
            height 35px
            border-radius 2px

        &--active
            display block
            left 0
            transition all .2s ease-out


    .nav-hovered
        color #333

        &:hover
            color #ca1515
            cursor pointer


@media screen and (min-width 1024px)
    .navbar
        &__mobile-logo
            display none

        .menu-wrapper
            position static

            .menu
                padding-top 0
                width 100%
                display flex
                align-items center

                &__logo,
                &__login
                    margin 0

                &__list
                    display flex
                    align-items center
                    margin 0
                    width 100%
                    padding 0

                    .options
                        width 100%
                        display flex
                        justify-content center

                    .panel
                        min-width 330px
                        display flex
                        justify-content space-around
                        align-items center

                    &__option
                        padding 1em
                        white-space nowrap

                    .item-list
                        padding-top 0
                        position static
                        width auto

            &__icon
                display none

