.quantity-block
    display flex
    align-items center

    &__label
        margin-right 8px

.quantity
    display flex
    justify-content space-around
    align-items center
    border 1px solid #eaeaea
    width 145px
    border-radius 50px
    padding 0 .5em

    &__element
        padding .5em 1em

    &__button
        font-weight bold

        &:hover
            cursor pointer
            color #ca1515

