.modal
    position fixed
    width 100%
    height 100vh
    background-color rgba(0, 0, 0 , .8)
    display flex
    justify-content center
    align-items center
    z-index 10

    &__content
        padding 1em
        background-color white
        min-width 600px
        min-height 300px
        max-height 100%
        box-sizing border-box
        overflow-y auto

